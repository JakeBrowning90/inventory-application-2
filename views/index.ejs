<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head')%>
  <body>
    <%- include('partials/header')%>
    <main class="indexMain">
      <%- include('partials/toolbar')%> <% if(locals.query) { %>
      <div>
        <h2><%= albumCount %></h2>
        <h2>matching Album(s)</h2>
      </div>

      <% } else { %>
      <div>
        <h2><%= albumCount %></h2>
        <h2>Album(s) in collection</h2>
      </div>

      <% } %> <% if(locals.query) { %>
      <div>
        <h2><%= artistCount %></h2>
        <h2>matching Artist(s)</h2>
      </div>

      <% } else { %>
      <div>
        <h2><%= artistCount %></h2>
        <h2>Artist(s) in collection</h2>
      </div>

      <% } %>

      <div class="resultColumn">
        <ul class="indexUL">
          <% if (locals.albumList) { %> <% albumList.forEach((album) => { %>
          <li>
            <a href="albums/<%= album.id %>/detail">
              <div class="indexThumbnail">Cover art TBA</div>
              <p><%= album.title %></p>
            </a>
          </li>
          <% }) %> <% } else { %>
          <h2>No Albums in collection.</h2>
          <% } %>
        </ul>
      </div>

      <div class="resultColumn">
        <ul class="indexUL">
          <% if (locals.artistList) { %> <% artistList.forEach((artist) => { %>
          <li>
            <a href="artists/<%= artist.id %>/detail">
              <div class="indexThumbnail artistImg">Portrait TBA</div>
              <p><%= artist.name %></p>
            </a>
          </li>
          <% }) %> <% } else { %>
          <h2>No Artists in collection.</h2>
          <% } %>
        </ul>
      </div>
    </main>
    <%- include('partials/footer')%>
  </body>
</html>
