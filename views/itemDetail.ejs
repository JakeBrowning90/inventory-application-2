<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/">Home</a>
    <% if (locals.artist) { %>
    <p><%= artist.name %></p>
    <p>First active: <%= artist.activeyear %></p>
    <p><%= artist.notes %></p>
    <p>Albums:</p>
    <ul>
      <% if (locals.albumList) { %> <% albumList.forEach((album) => {%>

      <li><a href="/albums/<%= album.id %>/detail"><%= album.title %></a></li>
      <% }) %> <% } %>
    </ul>
    <a href="/artists/<%= artist.id %>/update">Update Artist</a>
    <a href="/artists/<%= artist.id %>/delete">Delete Artist</a>

    <% } %> <% if (locals.album) { %>
    <p><%= album.title %></p>
    <p>Artist(s):</p>
    <ul>
      <% if (locals.artistList) { %> <% artistList.forEach((artist) => {%>

      <li><a href="/artists/<%= artist.id %>/detail"><%= artist.name %></a></li>
      <% }) %> <% } %>
    </ul>
    <p>Release year: <%= album.year %></p>
    <p><%= album.notes %></p>
    <a href="/albums/<%= album.id %>/update">Update Album</a>
    <a href="/albums/<%= album.id %>/delete">Delete Album</a>
    <% } %>
  </body>
</html>
