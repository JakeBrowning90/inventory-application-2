<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head')%>
  <body>
    <%- include('partials/header')%>

    <main class="detailMain">
      <div class="detailNav">
        <a href="/"><img src="/imgs/back.svg" /></a>
        <div>
          <% if (locals.artist) { %>
          <a href="/artists/<%= artist.id %>/update"
            ><img src="/imgs/edit.svg"
          /></a>
          <a href="/artists/<%= artist.id %>/delete"
            ><img src="/imgs/delete.svg"
          /></a>
          <% } %> <% if (locals.album) { %>
          <a href="/albums/<%= album.id %>/update"
            ><img src="/imgs/edit.svg"
          /></a>
          <a href="/albums/<%= album.id %>/delete"
            ><img src="/imgs/delete.svg"
          /></a>
          <% } %>
        </div>
      </div>
      <% if (locals.artist) { %>
      <div class="detailBio">
        <div class="imgBacking detailImgBacking artistBacking">
          <img
            src="<%= (artist.image) ? artist.image : '/imgs/personicon.png' %>"
            class="entryImg detailImg artistImg"
          />
        </div>

        <!-- <img src="/uploads/image_1730424350214.jpg" class="entryImg detailImg artistImg" /> -->
        <div class="detailHeadline">
          <h1><%= artist.name %></h1>
          <p>Debut: <%= artist.activeyear %></p>
        </div>

        <p class="detailNotes"><%= artist.notes %></p>
      </div>
      <div class="detailListSection">
        <p class="detailListHeading">Albums:</p>
        <ul class="detailUL">
          <% if (locals.albumList) { %> <% albumList.forEach((album) => {%>

          <li>
            <a href="/albums/<%= album.id %>/detail">
              <div class="imgBacking detailThumbnailBacking">
                <img
                  src="<%= (album.image) ? album.image : '/imgs/musicnote.png' %>"
                  class="entryImg detailThumbnail"
                />
              </div>

              <div class="tnLabel"><%= album.title %></div>
            </a>
          </li>
          <% }) %> <% } %>
        </ul>
      </div>

      <% } %> <% if (locals.album) { %>
      <div class="detailBio">
        <div class="imgBacking detailImgBacking">
          <img
            src="<%= (album.image) ? album.image : '/imgs/musicnote.png' %>"
            class="entryImg detailImg"
          />
        </div>

        <div class="detailHeadline">
          <h1><%= album.title %></h1>
          <p>Release: <%= album.year %></p>
        </div>

        <p class="detailNotes"><%= album.notes %></p>
      </div>
      <div class="detailListSection">
        <p class="detailListHeading">Artists:</p>
        <ul class="detailUL">
          <% if (locals.artistList) { %> <% artistList.forEach((artist) => {%>

          <li>
            <a href="/artists/<%= artist.id %>/detail">
              <div class="imgBacking detailImgBacking artistBacking">
                <img
                  src="<%= (artist.image) ? artist.image : '/imgs/personicon.png' %>"
                  class="entryImg detailThumbnail artistImg"
                />
              </div>

              <div class="tnLabel"><%= artist.name %></div>
            </a>
          </li>
          <% }) %> <% } %>
        </ul>
      </div>
      <% } %>
    </main>
    <!-- <%- include('partials/footer')%> -->
  </body>
</html>
