<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head')%>
  <body>
    <%- include('partials/header')%>
    <main>
      <a href="/artists/<%= artist.id %>/detail"><img src="/imgs/back.svg"/></a>
      <h1><%= title %></h1>

      <% if (albumList.length !== 0) { %>
      <h2>Warning: please update or delete the albums shown to continue.</h2>
      <p>Albums:</p>
      <ul>
        <% albumList.forEach((album) => {%>
        <li><a href="/albums/<%= album.id %>/detail"><%= album.title %></a></li>
        <% }) %>
      </ul>
      <% } else { %>
      <h2>
        No albums in database. Are you sure you want to delete this artist?
      </h2>

      <h1><%= artist.name %></h1>
      <p>First active: <%= artist.activeyear %></p>
      <p><%= artist.notes %></p>
      <form method="POST"><button>Delete</button></form>
      <% } %>
    </main>
  </body>
</html>
